<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:weightSum="1"
    android:orientation="vertical">
    <MvvmCross.Platforms.Android.Binding.Views.MvxListView
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.8"
        local:MvxItemTemplate="@layout/mediaitemtemplate"
        local:MvxBind="ItemsSource MediaQueue"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddToQueue"
        android:text="Add random song to queue"
        android:layout_above="@+id/tvPlaying" 
        local:MvxBind="Click AddRandomToQueueCommand"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPlaying"
        android:layout_above="@+id/sbProgress"
        android:text="Press 'Play' to play a song" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sbProgress"
        android:layout_above="@+id/btnPlayPause"
        />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlayPause"
        android:textOff="Play"
        android:textOn="Pause"
        android:layout_alignParentBottom="true" 
        local:MvxBind="Click PlayPauseCommand"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrevious"
        android:text="|&lt; Previous"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPlayPause" 
        local:MvxBind="Click PlayPreviousCommand"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:text="Next &gt;|"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPrevious" 
        local:MvxBind="Click PlayNextCommand"/>
    </RelativeLayout>
</LinearLayout>